<!doctype html>
<html lang="et">

<%- include('includes/head', { title: 'Kontakt' }) %>

    <body>
        <%- include('includes/nav') %>

            <header class="bg-light py-5 border-bottom">
                <div class="container">
                    <h1 class="display-6">Kontakt</h1>
                    <p class="lead mb-0">Võta meiega ühendust</p>
                </div>
            </header>

            <main class="container my-4">
                <form class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Nimi</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">E-post</label>
                        <input type="email" class="form-control" required>
                    </div>
                    <div class="col-12">
                        <label class="form-label">Sõnum</label>
                        <textarea class="form-control" rows="5" required></textarea>
                    </div>
                    <div class="col-12">
                        <button class="btn btn-primary">Saada</button>
                    </div>
                </form>
            </main>

            <%- include('includes/footer') %>
    </body>

</html>